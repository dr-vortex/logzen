{
	"name": "logzen",
	"version": "0.1.1",
	"description": "An easy to use utility for logging",
	"main": "dist/node/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"format:check": "prettier --check {src,test,build}/**/*.ts",
		"format:fix": "prettier --write {src,test,build}/**/*.ts",
		"format": "npm run format:check && npm run format:fix",
		"lint": "eslint {src,test,build}/**/*.ts && tsc --noEmit",
		"build": "node scripts/build.js && tsc --emitDeclarationOnly && npm run build:docs",
		"build:docs": "typedoc src/index.ts --out docs",
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dr-vortex/logzen.git"
	},
	"keywords": [
		"log",
		"logger"
	],
	"author": "Dr. Vortex",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/dr-vortex/logzen/issues"
	},
	"homepage": "https://github.com/dr-vortex/logzen#readme",
	"devDependencies": {
		"@types/jest": "^29.5.3",
		"@types/node": "^20.4.5",
		"@typescript-eslint/eslint-plugin": "^6.2.0",
		"@typescript-eslint/parser": "^6.2.0",
		"esbuild": "^0.18.17",
		"eslint": "^8.45.0",
		"jest": "^29.6.1",
		"prettier": "^3.0.0",
		"ts-jest": "^29.1.1",
		"typedoc": "^0.24.8",
		"typescript": "^5.1.6"
	},
	"dependencies": {
		"eventemitter3": "^5.0.1"
	}
}