{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ES2016",
		"moduleResolution": "node",
		"outDir": "dist",
		"typeRoots": ["node_modules/@types"],
		"types": ["jest"],
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitThis": true,
		"declaration": true
	},
	"files": ["src/index.ts"],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
